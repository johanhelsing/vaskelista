@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vaskelista</title>
    @Styles.Render("~/Content/css")
    @Mvc.RazorTools.BundleManager.Styles.Render()
    @Styles.Render("~/Content/less")
    @Scripts.Render("~/bundles/modernizr")
    <link href='http://fonts.googleapis.com/css?family=Patrick+Hand+SC|Schoolbell' rel='stylesheet' type='text/css'>
    <link href='//fonts.googleapis.com/css?family=Roboto:400,100,700' rel='stylesheet' type='text/css' />
    <link rel="shortcut icon" href="../favicon.ico" />
</head>
<body>
    <main class="main container body-content my-week">
        <h2>Min uke</h2>
        <table class="table table-hover week-table">
            <thead>
                <tr>
                    <th class="snug"></th>
                    <th>Oppgave</th>
                    <th>Rom</th>
                    <th>Dag</th>
                </tr>
            </thead>
            <tbody data-bind="foreach: tasks">
                <tr data-bind="click: $data.toggleTask, css: { success: finished, danger: !finished() && expired() }">
                    <td class="vert-align snug"><input type="checkbox" data-bind="checked: finished, clickBubble: false, click: $data.saveTask" /></td>
                    <td class="vert-align"><span data-bind="text: name"></span></td>
                    <td class="vert-align"><span data-bind="text: room"></span></td>
                    <td class="vert-align"><span data-bind="text: day"></span></td>
                </tr>
            </tbody>
        </table>

    </main>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/knockback")
    @Scripts.Render("~/bundles/app")
</body>
</html>
