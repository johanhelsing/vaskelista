@model Vaskelista.Models.Household

@{
    ViewBag.Title = "Create";
}

<h2>Velkommen til vaskelista</h2>

<p>Her kan du velge hva vaskelisten din skal hete:</p>

@using (Html.BeginForm("Create", "Household", FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true)

        <div class="form-group">
            <label class="control-label col-md-2">@Request.Url.ToString()</label>
            <div class="col-md-10">
                <ul class="form-option-list">
                    @foreach (string randomUrl in ViewBag.RandomUrls)
                    {
                        <li><label>@Html.RadioButtonFor(model => model.Token, randomUrl)@randomUrl</label></li>
                    }
                </ul>
            </div>
        
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lag vaskeliste" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
