@model Vaskelista.Models.Room

@{
    ViewBag.Title = "Edit";
}

<h2>Rediger rom</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.RoomId)

        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control input-lg" })
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-success btn-lg">
                    <i class="fa fa-save"></i> Lagre
                </button>
                <a href="@Url.Action("Index")" class="btn btn-danger btn-lg">
                    <i class="fa fa-times"></i> Avbryt
                </a>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Tilbake til romoversikten", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
